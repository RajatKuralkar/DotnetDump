@model Models.Employee
<h3>ADD EMPLOYEE FORM</h3>
<form asp-controller="Emp" asp-action="CreateEmp" method="post" id="employeeForm">
    <table>
        <tr>
            <td><label asp-for="Id">Emp id :</label></td>
            <td><input asp-for="Id"/></td>
            <td><span asp-validation-for="Id" class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Name">Name :</label></td>
            <td><input asp-for="Name" type="text"/></td>
            <td><span asp-validation-for="Name" class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="NoOfHrsWorked">No. of Hrs Worked:</label></td>
            <td><input asp-for="NoOfHrsWorked" type="number"/></td>
            <td><span asp-validation-for="NoOfHrsWorked" class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="BasicSal">Basic Salary:</label></td>
            <td><input asp-for="BasicSal" type="number"/></td>
            <td><span asp-validation-for="BasicSal" class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Tax">Tax:</label></td>
            <td><input asp-for="Tax" type="number"/></td>
            <td><span asp-validation-for="Tax" class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Dept">Department:</label></td>
            <td><input asp-for="Dept" type="text"/></td>
            <td><span asp-validation-for="Dept" class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="DA">DA:</label></td>
            <td><input asp-for="DA" type="number"/></td>
            <td><span asp-validation-for="DA" class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="EType">Employee Type:</label></td>
            <td><input asp-for="EType" type="number"/></td>
            <td><span asp-validation-for="EType" class="text-danger"></span></td>
        </tr>
        <tr>
            <td><label asp-for="JoiningDate">Joining Date:</label></td>
            <td><input asp-for="JoiningDate" type="date"/></td>
            <td><span asp-validation-for="JoiningDate" class="text-danger"></span></td>
        </tr>
    </table>    
    <button type="submit">Add</button>
</form>